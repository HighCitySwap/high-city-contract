contract HCCLeaderRewardPool is Ownable {
    address public executorAddress;
    // The HCC TBscen!
    IERC20 public HCC;
    mapping(bytes => bool) private _signatureMap;
    event WithDrawEvnet(address indexed sender, uint256 amount, bytes _signature);
    constructor(
        IERC20 _HCC,
        address _executorAddress
    ) {
        HCC = _HCC;
        executorAddress = _executorAddress;
    }
    modifier onlyExecutor() {
        require(executorAddress == msg.sender, " caller is not the executorAddress");
        _;
    }

    function setExecutor(address _executorAddress) public onlyOwner {
        executorAddress = _executorAddress;
    }

    function withDrawReward(address to, uint256 _amount, uint256 _expiredTime, bytes memory _signature) public {
        address signer = signatureWallet(to, _amount, _expiredTime, _signature);
        require(signer == executorAddress, "signer is not the executorAddress");
        require(block.timestamp <= _expiredTime, "now time is greater than expiredTime");
        require(_signatureMap[_signature] == false, "signature has been used");
        _signatureMap[_signature] = true;
        HCC.transfer(to, _amount);
        emit WithDrawEvnet(to, _amount, _signature);
    }

    function signatureWallet(address to, uint256 amount, uint256 _expiredTime, bytes memory _signature) public pure returns (address){
        return ECDSA.recover(keccak256(abi.encode(to, amount, _expiredTime)), _signature);
    }
    function withDrawToken(address to, uint256 value) public onlyOwner{
        HCC.transfer(to, value);
    }
}
